@model IEnumerable<WebApplication1.DAL.kategoriler>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kategori)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.kateID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.kateID })
        </td>
    </tr>
}

</table>
