@model WebApplication1.DAL.kategoriler

@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Kategoriler</h2>


@using (Html.BeginForm())
{
    
    <div class="form-horizontal">
        <h4>Güncelle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.kateID)

        <div class="form-group">
            @Html.LabelFor(model => model.kategori, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-transform:capitalize;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.kategori, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kategori, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
