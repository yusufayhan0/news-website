@model WebApplication1.DAL.news

@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Haberler</h2>

<div>
    <h4>Detay</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Haber Başlığı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.haberBasligi)
        </dd>

        <dt>
           Slider Başlığı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sliderBasligi)
        </dd>

        <dt>
            Yazı
        </dt>

        <dd>
            @WebApplication1.Models.htmlTemizle.detayKodTemizle(Convert.ToString(Html.Raw(Model.yazi)))
        </dd>

        <dt>
            Resim
        </dt>

        <dd>
            <img src="@(Html.DisplayFor(modelItem => Model.resim))" width="70%" />
        </dd>

        <dt>
            Eklenme Zamanı
        </dt>

        <dd>
            @WebApplication1.Models.zaman.GecenZamaniHesapla(Convert.ToDateTime(Model.eklenmeTarihi))
        </dd>

        <dt>
            Yazar
        </dt>

        <dd>
            @Html.DisplayFor(model => model.yazarlar.adi) @Html.DisplayFor(model => model.yazarlar.soyadi)
        </dd>

        <dt>
            Tıklanma
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tiklanma)
        </dd>

        <dt>
            Kategori
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kategoriler.kategori)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Güncelle", "Edit", new { id = Model.haberID }) |
    @Html.ActionLink("Geri Dön", "Index")
</p>



