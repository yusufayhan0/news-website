@model WebApplication1.DAL.hakkimizda

@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Hakkımızda</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Güncelle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.hakkimizdaID)

        <div class="form-group">
            <label class="control-label col-md-2">Yazı</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.yazi, 20, 40, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.yazi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Geri Dön", "Details")
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
