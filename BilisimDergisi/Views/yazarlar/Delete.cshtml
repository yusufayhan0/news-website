@model WebApplication1.DAL.yazarlar

@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Yazarlar</h2>

<h3>Kayıt Silinsin mi ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
           Kullanıcı Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kullaniciAdi)
        </dd>
        
        <dt>
            Resim
        </dt>

        <dd>
            <img src="@Model.P_resim" width="200" height="150"/>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
